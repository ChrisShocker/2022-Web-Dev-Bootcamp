<%- include('partials/header'); -%>

<div class="title">
    <% for( let index = postArray.length -1; index >= 0; index-- ) { %>
    <div class="container-fluid mb-4">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6 border border-dark rounded-top border-bottom-0 mx-auto">
                <%=postArray[index].date%>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-10 border border-dark rounded-top mx-auto">
                <p class="lead text-start text-break mt-2 mb-2">
                <h2><%=postArray[index].title%></h2>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-10 border border-top-0 border-dark rounded-bottom mx-auto">
                <p class="lead text-start text-break mt-2 mb-2">
                    <%=postArray[index].body.substring(1,80) +"..."%>
                </p>
            </div>
        </div>
    </div>
    <% } %>
</div>

<%- include('partials/footer'); -%>
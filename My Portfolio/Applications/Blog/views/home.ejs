<%- include('partials/header'); -%>

<% for( let index = postArray.length -1; index >= 0; index-- ) { %>
<div class="container-fluid mb-4">
    <div class="row">
        <div class="date col-lg-6 col-md-6 col-sm-6 border border-dark rounded-top border-bottom-0 mx-auto">
            <h5 class="mt-2">
                <%=postArray[index].date%>
            </h5>
        </div>
    </div>
    <div class="row">
        <div class="title col-lg-10 border border-dark rounded-top mx-auto">
            <h2 class="text-start mt-2 text-center"><%=postArray[index].title%></h2>
        </div>
    </div>
    <div class="row">
        <div class="body col-lg-10 border border-top-0 border-dark rounded-bottom mx-auto">
            <p class="lead text-start text-break mb-2">
                <%=postArray[index].body.substring(0,100) +"..."%>
                <a class="ms-2" href="<%=postArray[index].title%> ">Go to Entry</a>
            </p>
        </div>
    </div>
</div>
<% } %>

<%- include('partials/footer'); -%>
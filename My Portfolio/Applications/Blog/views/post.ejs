<%- include('partials/header'); -%>

<div class="container-fluid mb-4">
    <div class="row">
        <div class="date col-lg-6 col-md-6 col-sm-6 border border-dark rounded-top border-bottom-0 mx-auto">
            <h5 class="mt-2">
                <%=postArray.date%>
            </h5>
        </div>
    </div>
    <div class="row">
        <div class="title col-lg-10 border border-dark rounded-top mx-auto">

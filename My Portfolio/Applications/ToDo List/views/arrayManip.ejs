exports.addItem = function(req, array){
    var item = req.body.newItem;
    array.push(item);
}

exports.removeItem = function(req, array){
    var item = req.body.removeTask; 
    const delIndex = array.indexOf(item);
    if(delIndex >= 0)
        array.splice(delIndex, 1);
    else
        console.log("item to delete not found");
}
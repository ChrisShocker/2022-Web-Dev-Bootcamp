<%- include('partials/header'); -%>

<div class="box box-top" id="heading">
    <h1>
        My Lists
    </h1>
</div>

<div class="box">
    <% for(let i=0; i < listArray.length; ++i){ %>

    <div class="item">
        <form class="item" action="/deleteList" method="POST">

            <input type="checkbox" name="removeTask" onchange="this.form.submit()"
                value=<%= listArray[i].name.replaceAll(' ', '^') %> aria-label="input for a new task">

            <p id="list-item" aria-label="list item">
                <%=listArray[i].name%>
            </p>
            <input type="hidden" name="listName" value=<%= listTitle %>>
        </form>

        <form class="item" action="/" method="POST">
            <button class="goTo" type="submit" name="goToList" aria-label="go to list"
                value=<%= listArray[i].name.replaceAll(' ', '^') %>><i
                    class="fa-solid fa-magnifying-glass"></i></button>
        </form>
    </div>
    <% } %>
</div>
<%- include('partials/footer'); -%>
    exports.removeTask = async function (req, Task){
        var item = req.body.removeTask;
        if (item)
        {
            const deleteTask= await Task.deleteOne({name: item});
            console.log('Deleted: ' +deleteTask.deletedCount +' entrie/s');
        }
        else
            console.log("No task entered");
    }

    exports.getTasks = async function (Task, list){
        Task.find({}, async function(error, tasks){
            if(error)
                console.log(error);
            else{
                const result = await JSON.parse(await JSON.stringify(tasks));
                await list.push(result);
                console.log('Tasks pushed to array');
                console.log(list);
            }
        }); 
    }

    exports.addTask = async function (req, Task, list)
    {
        var item = req.body.newItem;
        if (item)
        {
            const task = new Task({
                name: item,
            });
            await task.save();
        }
        else
            console.log("No task entered");
    }
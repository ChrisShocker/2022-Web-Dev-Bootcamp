    exports.buildCollection = async function (Article)
    {
        await exports.addArticle(Article, "wikiPost1", "A explanation of wikipost1");
        await exports.addArticle(Article, "wikiPost2", "A explanation of wikipost2");
        await exports.addArticle(Article, "wikiPost3", "A explanation of wikipost3");
    }

    exports.addArticle = async function (Article,title, content)
    {
            const article = new Article({
                title: title,
                content: content
            });
            await article.save();
    }